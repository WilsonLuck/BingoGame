<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@color/selected" android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />

            <solid android:color="@drawable/textselector" />

            <stroke android:width="5dp" android:color="#00ffffff" />
        </shape>
        
        </item>
        
    <item android:drawable="@color/unselected" android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />

            <solid android:color="@drawable/textselector" />

            <stroke android:width="5dp" android:color="#00ffffff" />
        </shape>
        
        </item>

</selector>